{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"],
      "@hooks/*": ["hooks/*"],
      "@context/*": ["context/*"],
      "@customtypes/*": ["types/*"],
      "@lib/*": ["lib/*"],
      "@graphql/*": ["graphql/*"],
      "@utils/*": ["utils/*"]
    },
    "incremental": true
  },
  "include": ["."],
  "exclude": ["node_modules", "input", "output"]
}
