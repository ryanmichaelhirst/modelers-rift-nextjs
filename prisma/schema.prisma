datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  username String
  password String
}

model Champion {
  id     Int    @id @default(autoincrement())
  name   String
  assets Asset[]
}

model Asset {
  id          Int      @id @default(autoincrement())
  champion    Champion @relation(fields: [championId], references: [id])
  championId  Int
  type        String
  name        String
  skin        String
  path        String
}