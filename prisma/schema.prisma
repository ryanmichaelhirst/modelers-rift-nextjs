datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  username String
  password String
}

model Character {
  id     Int    @id @default(autoincrement())
  name   String
  displayName String?
  type   String
  assets Asset[]
}

model Asset {
  id           Int      @id @default(autoincrement())
  character    Character @relation(fields: [characterId], references: [id])
  characterId  Int
  type         String
  name         String
  skin         String
  path         String
}