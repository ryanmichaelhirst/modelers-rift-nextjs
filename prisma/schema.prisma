datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

model Character {
  id     Int    @id @default(autoincrement())
  name   String
  displayName String?
  type   String
  assets Asset[]
}

model Asset {
  id           Int      @id @default(autoincrement())
  character    Character @relation(fields: [characterId], references: [id])
  characterId  Int
  type         String
  name         String
  skin         String
  uri          String @unique
  url          String?
  s3_url       String?
  duration     Float?
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  createdAt DateTime
  updatedAt DateTime
  deletedAt DateTime
}